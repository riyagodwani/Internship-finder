<Window x:Class="Internships.EmployerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Internships"
        mc:Ignorable="d"
        Title="EmployerWindow" Height="300" Width="400">
    
    <Grid Background="#FF72ACCA">

        <StackPanel>
            <StackPanel Margin="15" Height="50" Width="200">
                <TextBlock HorizontalAlignment="Center" >
                    <Run Text="{Binding Path=EName, StringFormat=Welcome {0}}" FontSize="20"/>
                </TextBlock>
            </StackPanel>
            <StackPanel>
                <Button Content="Add an Internship" Margin="5" Height="30" Width="150" Command="{Binding AddCommand}"/>
            </StackPanel>
        </StackPanel>
       

    </Grid>
</Window>
